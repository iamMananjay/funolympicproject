@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<style>
    .text-danger {
        color: red;
        font-size: 15px;
    }
</style>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Mangement system</title>
    <!-- css link -->
    @*<link rel="stylesheet" href="~/css/login.css/style.css">*@
    <link href="~/css/login/style.css" rel="stylesheet" />
    <!-- font-awesome link -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
</head>
<body>
    @*<h1>@ViewData["Title"]</h1>*@
    <div class="row">
        <div class="col-md-4">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post" id="registration-form">
                <h1>Create a new account</h1>
                @*<hr />
                    <div asp-validation-summary="All" class="text-danger"></div>*@
                <div class="input-box-registration">
                    @*<label asp-for="Input.Email"></label>*@
                    <input asp-for="Input.FullName" placeholder="Fullname" />
                </div>
                <span asp-validation-for="Input.FullName" class="text-danger"></span>

                <div class="input-box-registration">
                    @*<label asp-for="Input.Email"></label>*@
                    <input asp-for="Input.Email" placeholder="Email" />

                </div>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
                <div class="input-box-registration">
                    @*<label asp-for="Input.Email"></label>*@
                    <input asp-for="Input.UserName" placeholder="Username" />
                </div>
                <span asp-validation-for="Input.UserName" class="text-danger"></span>

                <div class="input-box-registration">
                    @*<label asp-for="Input.Email"></label>*@
                    <input asp-for="Input.Password" placeholder="Password" />
                </div>
                <span asp-validation-for="Input.Password" class="text-danger"></span>

                <div class="input-box-registration">
                    @*<label asp-for="Input.Email"></label>*@
                    <input asp-for="Input.ConfirmPassword" placeholder="Confirm Password" />
                </div>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

                <div class="input-box-row">
                    <div>
                        <div class="input-box-registration country">
                            <input asp-for="Input.Country" placeholder="Country" />
                        </div>
                        <span asp-validation-for="Input.Country" class="text-danger"></span>

                    </div>
                    <div>
                        <div class="input-box-registration">
                            <input asp-for="Input.State" placeholder="State/Region">
                        </div>
                        <span asp-validation-for="Input.State" class="text-danger"></span>

                    </div>
                </div>
                <label>
                    <input type="checkbox" name="remember"> I agree all Terms & Condition
                </label>
                <button type="submit" class="register-btn">Register</button>
                <div class="bottom-links-signin">
                    <p>Have already an account? <a href='/Identity/Account/Login'> Login here</a></p>
                </div>
                @*<div class="form-group">
                        <label asp-for="Input.UserName"></label>
                        <input asp-for="Input.UserName" class="form-control" />
                        <span asp-validation-for="Input.UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>*@
                @*<button type="submit" class="btn btn-primary">Register</button>*@
            </form>
        </div>
    </div>



</body>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

